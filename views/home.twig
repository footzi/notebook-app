{% extends "./layout.twig" %}

{% block title %}
    Главная страница
{% endblock %}
{% block content %}
    <h2 class="b-title">Home page</h2>
    <h5 class="b-subtitle">(render, create, routing)</h5>
    <h1></h1>

    <ul class="b-notes j-notes">
        {% include "./templates/note.twig" %}
    </ul>
    <div class="b-create">
        <h3 сlass="b-create__title">Создай запись</h3>
        {% include "templates/form-create-category.twig"%}
    </div>

    <div class="b-create">
        <h3 сlass="b-create__title">Создай новую категорию</h3>
        <form method="post" action="/create-category" class="b-form j-form-category">
            <div class="input-field">
                <input id="create-title" type="text" name="title" class="b-form__input" class="validate" required="required">
                <label for="create-title">Напиши название категории</label>
            </div>
            <button class="b-form__button btn b-btn b-btn_state_send" type="submit">Отправить</button>
            <button class="btn b-btn b-btn_state_clear" type="reset">Очистить</button>
        </form>
    </div>
{% endblock %}


